<%= paginate @posts %>
<% @posts.each do |post| %>
  <h3><%= (( if params[:page].nil? then 0 else params[:page].to_i - 1 end)*@posts.default_per_page + @posts.index(post) + 1).to_s + ") "+ post.title %></h3>
  <p>
    <%= post.author %> <br>
    <%= post.url %>
  </p>
<% end %>
