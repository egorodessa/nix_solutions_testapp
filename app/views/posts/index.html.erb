<%= paginate @posts %>
<% @posts.each do |post| %>
  <p>
  <h3><%= (( if params[:page].nil? then 0 else params[:page].to_i - 1 end)*@posts.default_per_page + @posts.index(post) + 1).to_s + ") "+ post.title %></h3>

    <small><strong>id:</strong> <%= post.id %></small> <br>
    <strong>author:</strong> <%= post.author %> <br>
    <strong>url:</strong> <%= post.url %>
  </p>
<% end %>
<%= paginate @posts %>

