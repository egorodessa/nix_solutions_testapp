<center><%= paginate @posts %></center>

<% @posts.each do |post| %>
  <div class="list-group">
    <a href=<%= post.url %> class="list-group-item" target="_blank">
      <h3 class="list-group-item-heading"><%= (( if params[:page].nil? then 0 else params[:page].to_i - 1 end)*@posts.default_per_page + @posts.index(post) + 1).to_s + ") "+ post.title %></h3>
      <p class="list-group-item-text">
        <small><strong>id:</strong> <%= post.id %></small> <br>
        <strong>author:</strong> <%= post.author %> <br>
        <strong>url:</strong> <%= post.url %>
      </p>
    </a>

  </div>
<% end %>

<center><%= paginate @posts %></center>

